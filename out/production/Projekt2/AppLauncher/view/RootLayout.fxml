          </Menu>
          <Menu fx:id="mbItemSkin" mnemonicParsing="false" text="Skin">
            <items>
              <MenuItem fx:id="mbItemBlack" mnemonicParsing="false" onAction="#switchSkinBlack" text="Black" />
