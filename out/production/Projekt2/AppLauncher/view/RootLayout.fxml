                  <MenuItem fx:id="mbItemGrey" mnemonicParsing="false" onAction="#switchSkinGrey" text="Grey" />
            </items>
          </Menu>
          <Menu fx:id="mbItemHelp" mnemonicParsing="false" text="Help">
